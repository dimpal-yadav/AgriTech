<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Supply Chain Support - AgriTech</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;600;700&family=Libertinus+Serif:wght@400;600&display=swap" rel="stylesheet">
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="images/logo.png">
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Open Sans', sans-serif;
            line-height: 1.6;
            color: #333;
            background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
            min-height: 100vh;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 30px;
            text-align: center;
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        }

        .header h1 {
            font-family: 'Libertinus Serif', serif;
            font-size: 2.5rem;
            color: #2c3e50;
            margin-bottom: 10px;
        }

        .nav-back {
            position: fixed;
            top: 20px;
            left: 20px;
            background: #fff;
            color: #333;
            padding: 10px 15px;
            border-radius: 50px;
            text-decoration: none;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            z-index: 1000;
        }

        .nav-back:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.15);
        }

        .supply-chain-flow {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 30px;
            margin: 30px 0;
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        }

        .flow-title {
            text-align: center;
            font-family: 'Libertinus Serif', serif;
            font-size: 2rem;
            color: #2c3e50;
            margin-bottom: 30px;
        }

        .flow-steps {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 20px;
        }

        .flow-step {
            background: linear-gradient(135deg, #74b9ff, #0984e3);
            color: white;
            padding: 20px;
            border-radius: 15px;
            text-align: center;
            flex: 1;
            min-width: 180px;
            position: relative;
            transition: all 0.3s ease;
        }

        .flow-step:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 25px rgba(0,0,0,0.2);
        }

        .flow-step::after {
            content: '→';
            position: absolute;
            right: -15px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1.5rem;
            color: #74b9ff;
        }

        .flow-step:last-child::after {
            display: none;
        }

        .step-icon {
            font-size: 2.5rem;
            margin-bottom: 10px;
            display: block;
        }

        .step-title {
            font-weight: 600;
            margin-bottom: 5px;
        }

        .step-desc {
            font-size: 0.9rem;
            opacity: 0.9;
        }

        .services-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 30px;
            margin: 30px 0;
        }

        .service-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }

        .service-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
        }

        .service-icon {
            font-size: 3rem;
            color: #74b9ff;
            margin-bottom: 20px;
        }

        .service-card h3 {
            font-family: 'Libertinus Serif', serif;
            font-size: 1.5rem;
            color: #2c3e50;
            margin-bottom: 15px;
        }

        .service-features {
            list-style: none;
            padding: 0;
        }

        .service-features li {
            padding: 8px 0;
            color: #555;
            display: flex;
            align-items: center;
        }

        .service-features li::before {
            content: "✓";
            color: #00b894;
            font-weight: bold;
            margin-right: 10px;
        }

        .tracking-dashboard {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 30px;
            margin: 30px 0;
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        }

        .dashboard-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .dashboard-header h2 {
            font-family: 'Libertinus Serif', serif;
            font-size: 2rem;
            color: #2c3e50;
            margin-bottom: 10px;
        }

        .shipment-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin: 20px 0;
        }

        .shipment-card {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            border-left: 4px solid #74b9ff;
            transition: all 0.3s ease;
        }

        .shipment-card:hover {
            transform: translateX(5px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .shipment-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .shipment-id {
            font-weight: 600;
            color: #2c3e50;
        }

        .status-badge {
            padding: 4px 12px;
            border-radius: 15px;
            font-size: 0.8rem;
            font-weight: 500;
        }

        .status-in-transit {
            background: #74b9ff;
            color: white;
        }

        .status-delivered {
            background: #00b894;
            color: white;
        }

        .status-pending {
            background: #fdcb6e;
            color: #2d3436;
        }

        .progress-bar {
            width: 100%;
            height: 6px;
            background: #e9ecef;
            border-radius: 3px;
            margin: 15px 0;
            overflow: hidden;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #74b9ff, #0984e3);
            border-radius: 3px;
            transition: width 0.3s ease;
        }

        .metrics-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin: 30px 0;
        }

        .metric-box {
            background: linear-gradient(135deg, #74b9ff, #0984e3);
            color: white;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
        }

        .metric-value {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 5px;
        }

        .metric-label {
            font-size: 0.9rem;
            opacity: 0.9;
        }

        .cta-section {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 40px;
            text-align: center;
            margin: 40px 0;
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        }

        .cta-button {
            background: linear-gradient(135deg, #74b9ff, #0984e3);
            color: white;
            padding: 15px 30px;
            border: none;
            border-radius: 50px;
            font-size: 1.1rem;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
            margin: 10px;
        }

        .cta-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        }

        @media (max-width: 768px) {
            .flow-steps {
                flex-direction: column;
            }
            
            .flow-step::after {
                content: '↓';
                right: 50%;
                top: 100%;
                transform: translateX(50%);
            }
            
            .flow-step:last-child::after {
                display: none;
            }
            
            .services-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <a href="index.html" class="nav-back">
        <i class="fas fa-arrow-left"></i> Back to Home
    </a>

    <div class="container">
        <div class="header">
            <h1><i class="fas fa-truck"></i> Supply Chain Support</h1>
            <p>Comprehensive logistics and supply chain management for seamless agricultural product distribution</p>
        </div>

        <div class="supply-chain-flow">
            <h2 class="flow-title">End-to-End Supply Chain Process</h2>
            <div class="flow-steps">
                <div class="flow-step">
                    <i class="fas fa-seedling step-icon"></i>
                    <div class="step-title">Farm Production</div>
                    <div class="step-desc">Quality produce from verified farms</div>
                </div>
                <div class="flow-step">
                    <i class="fas fa-warehouse step-icon"></i>
                    <div class="step-title">Collection Centers</div>
                    <div class="step-desc">Efficient aggregation and sorting</div>
                </div>
                <div class="flow-step">
                    <i class="fas fa-truck step-icon"></i>
                    <div class="step-title">Transportation</div>
                    <div class="step-desc">Climate-controlled logistics</div>
                </div>
                <div class="flow-step">
                    <i class="fas fa-store step-icon"></i>
                    <div class="step-title">Distribution</div>
                    <div class="step-desc">Retail and wholesale markets</div>
                </div>
            </div>
        </div>

        <div class="services-grid">
            <div class="service-card">
                <div class="service-icon">
                    <i class="fas fa-route"></i>
                </div>
                <h3>Logistics Management</h3>
                <p>Optimized transportation and route planning for efficient delivery</p>
                <ul class="service-features">
                    <li>Route optimization algorithms</li>
                    <li>Real-time GPS tracking</li>
                    <li>Fleet management system</li>
                    <li>Fuel cost optimization</li>
                    <li>Delivery scheduling</li>
                </ul>
            </div>

            <div class="service-card">
                <div class="service-icon">
                    <i class="fas fa-boxes"></i>
                </div>
                <h3>Warehouse Solutions</h3>
                <p>State-of-the-art storage facilities with inventory management</p>
                <ul class="service-features">
                    <li>Temperature-controlled storage</li>
                    <li>Inventory tracking system</li>
                    <li>Quality control protocols</li>
                    <li>Automated sorting systems</li>
                    <li>Loss prevention measures</li>
                </ul>
            </div>

            <div class="service-card">
                <div class="service-icon">
                    <i class="fas fa-clipboard-check"></i>
                </div>
                <h3>Quality Assurance</h3>
                <p>Comprehensive quality control throughout the supply chain</p>
                <ul class="service-features">
                    <li>Quality inspection protocols</li>
                    <li>Freshness monitoring</li>
                    <li>Certification management</li>
                    <li>Traceability systems</li>
                    <li>Compliance tracking</li>
                </ul>
            </div>
<!-- 
            <div class="service-card">
                <div class="service-icon">
                    <i class="fas fa-chart-network"></i>
                </div>
                <h3>Supply Chain Analytics</h3>
                <p>Data-driven insights for supply chain optimization</p>
                <ul class="service-features">
                    <li>Demand forecasting</li>
                    <li>Performance analytics</li>
                    <li>Cost analysis reports</li>
                    <li>Efficiency metrics</li>
                    <li>Market trend analysis</li>
                </ul>
            </div> -->
        </div>

        <div class="tracking-dashboard">
            <div class="dashboard-header">
                <h2><i class="fas fa-map-marked-alt"></i> Live Shipment Tracking</h2>
                <p>Real-time monitoring of your agricultural shipments</p>
            </div>

            <div class="metrics-row">
                <div class="metric-box">
                    <div class="metric-value" id="activeShipments">156</div>
                    <div class="metric-label">Active Shipments</div>
                </div>
                <div class="metric-box">
                    <div class="metric-value" id="deliveredToday">23</div>
                    <div class="metric-label">Delivered Today</div>
                </div>
                <div class="metric-box">
                    <div class="metric-value" id="onTimeRate">94%</div>
                    <div class="metric-label">On-Time Rate</div>
                </div>
                <div class="metric-box">
                    <div class="metric-value" id="avgDeliveryTime">2.4</div>
                    <div class="metric-label">Avg Days</div>
                </div>
            </div>

            <div class="shipment-grid">
                <div class="shipment-card">
                    <div class="shipment-header">
                        <div class="shipment-id">SHP-2025-001</div>
                        <div class="status-badge status-in-transit">In Transit</div>
                    </div>
                    <p><strong>From:</strong> Punjab Farms</p>
                    <p><strong>To:</strong> Delhi Market</p>
                    <p><strong>Product:</strong> Fresh Vegetables</p>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: 65%"></div>
                    </div>
                    <p><small>ETA: Tomorrow 10:00 AM</small></p>
                </div>

                <div class="shipment-card">
                    <div class="shipment-header">
                        <div class="shipment-id">SHP-2025-002</div>
                        <div class="status-badge status-delivered">Delivered</div>
                    </div>
                    <p><strong>From:</strong> Maharashtra Farms</p>
                    <p><strong>To:</strong> Mumbai Market</p>
                    <p><strong>Product:</strong> Fruits & Grains</p>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: 100%"></div>
                    </div>
                    <p><small>Delivered: Today 08:30 AM</small></p>
                </div>

                <div class="shipment-card">
                    <div class="shipment-header">
                        <div class="shipment-id">SHP-2025-003</div>
                        <div class="status-badge status-pending">Pending</div>
                    </div>
                    <p><strong>From:</strong> Rajasthan Farms</p>
                    <p><strong>To:</strong> Jaipur Market</p>
                    <p><strong>Product:</strong> Pulses & Grains</p>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: 25%"></div>
                    </div>
                    <p><small>Scheduled: Tomorrow 06:00 AM</small></p>
                </div>

                <div class="shipment-card">
                    <div class="shipment-header">
                        <div class="shipment-id">SHP-2025-004</div>
                        <div class="status-badge status-in-transit">In Transit</div>
                    </div>
                    <p><strong>From:</strong> Tamil Nadu Farms</p>
                    <p><strong>To:</strong> Bangalore Market</p>
                    <p><strong>Product:</strong> Rice & Spices</p>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: 80%"></div>
                    </div>
                    <p><small>ETA: Tonight 11:00 PM</small></p>
                </div>
            </div>
        </div>

        <div class="cta-section">
            <h2 style="color: #2c3e50; margin-bottom: 20px;">Optimize Your Supply Chain Today</h2>
            <p style="margin-bottom: 30px; color: #666;">Join thousands of farmers and distributors using our platform</p>
            <a href="#" class="cta-button">Get Started</a>
            <a href="#" class="cta-button">Request Quote</a>
            <a href="#" class="cta-button">Contact Support</a>
        </div>
    </div>

    <script>
        // Simulate real-time updates
        function updateMetrics() {
            document.getElementById('activeShipments').textContent = 
                Math.floor(Math.random() * 50 + 150);
            
            document.getElementById('deliveredToday').textContent = 
                Math.floor(Math.random() * 20 + 20);
            
            document.getElementById('onTimeRate').textContent = 
                Math.floor(Math.random() * 10 + 90) + '%';
            
            document.getElementById('avgDeliveryTime').textContent = 
                (Math.random() * 1 + 2).toFixed(1);
        }

        // Update metrics every 10 seconds
        setInterval(updateMetrics, 10000);

        // Animate progress bars
        document.addEventListener('DOMContentLoaded', function() {
            const progressBars = document.querySelectorAll('.progress-fill');
            progressBars.forEach((bar, index) => {
                const width = bar.style.width;
                bar.style.width = '0%';
                setTimeout(() => {
                    bar.style.width = width;
                }, index * 200);
            });

            // Add entrance animations
            const cards = document.querySelectorAll('.service-card, .shipment-card');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(30px)';
                
                setTimeout(() => {
                    card.style.transition = 'all 0.6s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });

        // Simulate shipment updates
        function simulateShipmentUpdate() {
            const shipments = document.querySelectorAll('.shipment-card');
            const randomShipment = shipments[Math.floor(Math.random() * shipments.length)];
            const progressBar = randomShipment.querySelector('.progress-fill');
            const currentWidth = parseInt(progressBar.style.width);
            
            if (currentWidth < 100) {
                progressBar.style.width = Math.min(100, currentWidth + Math.floor(Math.random() * 10 + 5)) + '%';
            }
        }

        // Update shipments every 15 seconds
        setInterval(simulateShipmentUpdate, 15000);
    </script>
</body>
</html>

